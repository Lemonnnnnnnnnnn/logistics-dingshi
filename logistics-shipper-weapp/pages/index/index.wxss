/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-box {
  margin: 60px 40px;
}

.user-login-image {
  width: 295px;
  height: 95px;
}

.wx-login-button {
  width:345px !important;
  background:rgba(53,209,47,1);
  margin-bottom: 30px;
  opacity:1;
  font-weight:400;
  color:rgba(255,255,255,1);
  border-radius:4px;
}

.app-login-button {
  width:345px !important;
  border:1px solid rgba(46,122,245,1);
  opacity:1;
  font-weight:400;
  color:rgba(46,122,245,1);
  border-radius:4px;
}

.user-agreement {
  font-size:14px;
  color:rgba(34,34,34,1);
  text-decoration:underline;
}

.checkbox {
  margin-top: 15px;
  width: 345px;
  color:rgba(153,153,153,1);
  font-size:14px;
}